<% layout("layouts/boilplates") -%>

<div class="row">
  <h1 class="text-center">Edit Information</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="POST"
      class="needs-validation mb-3"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="title"
          id="title"
          placeholder="Title"
          value="<%= campground.title  %>"
          required
        />
      </div>

      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="number"
            name="price"
            id="price"
            placeholder="Price"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            value="<%= campground.price  %>"
            required
          />
          <span class="input-group-text">.00</span>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="description"
          id="description"
          rows="3"
          placeholder="Description"
          required
        >
          <%=  campground.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          placeholder="Location"
          value="<%= campground.location  %>"
          required
        />
      </div>

      <div class="mb-3">
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <% campground.images.forEach((img, i) => {%>
        <img src="<%= img.thumbnail  %>" alt="" class="img-thumbnail w-50" />
        <div class="form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="deleteImages[]"
            value="<%= img.filename %>"
            id="img-<%= i  %>"
          />
          <label class="form-check-label" for="img-<%= i  %>">Delete?</label>
        </div>
        <% }) %>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
